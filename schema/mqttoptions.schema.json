{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/root.json",
    "type": "object",
    "title": "The Root Schema",
    "required": [
    "url",
    "port"
    ],
    "properties": {
        "url": {
            "$id": "#/properties/url",
            "type": "string",
            "title": "The Url Schema",
            "default": "",
            "examples": [
                "www.mqtt.org"
            ],
            "pattern": "^(.*)$"
        },
        "port": {
            "$id": "#/properties/port",
            "type": "integer",
            "title": "The Port Schema",
            "default": 1883,
            "examples": [
                1883
            ]
        }
    }
}
   